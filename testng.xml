<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Bookstore API Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.bookstore.listeners.TestListener"/>
    </listeners>

    <test name="Books API Tests">
        <classes>
            <class name="com.bookstore.tests.BooksApiTest"/>
        </classes>
    </test>

    <test name="Authors API Tests">
        <classes>
            <class name="com.bookstore.tests.AuthorsApiTest"/>
        </classes>
    </test>
</suite>
